{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "strict": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    
    // Best practices
    "noFallthroughCasesInSwitch": true,
    
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
}
